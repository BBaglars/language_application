{
  "expo": {
    "name": "LingoSpark",
    "slug": "LanguageApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/lingospark-logo.png",
    "scheme": "lingospark",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.berkay.languageapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/lingospark-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/lingospark-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/lingospark-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1d12f1a9-9768-4fa1-b0bb-bfdfd4d97662"
      }
    }
  }
}
